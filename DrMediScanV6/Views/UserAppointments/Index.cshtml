@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}



<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Clinic Name</th>
                        <th>Patient Name</th>
                        <th>Appointment Time</th>
                        <th>Phone Number</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var appointment in Model)
                    {
                        <tr>
                            <td>@appointment.Id</td>
                            <td>@appointment.ClinicName</td>
                            <td>@($"{appointment.PatientFirstName} {appointment.PatientLastName}")</td>
                            <td>@appointment.AppointmentTime</td>
                            <td>@appointment.PatientPhoneNo</td>
                            <td>
                                <form asp-action="Index" asp-route-id="@appointment.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this appointment?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="d-flex justify-content-center mt-3">
                <a asp-action="ClinicChoose" asp-controller="BookAppointment" class="btn btn-primary">Book New Appointment</a>
            </div>
        </div>
    </div>
</div>
